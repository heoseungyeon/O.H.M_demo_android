<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/loginButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        android:padding="0sp"
        android:src="@drawable/person"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/mobius"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:src="@drawable/mobius_strip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="50dp"
        />

    <ImageButton
        android:id="@+id/noticeButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/orm1"
        android:scaleType="centerCrop"
        android:padding="0sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="110dp"
        />

    <ImageButton
        android:id="@+id/mapButton"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:src="@drawable/paperplain"
        android:scaleType="centerCrop"
        android:padding="0sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="110dp"
        />
    <TextView
        android:text = "About Service"
        android:textColor="@color/yellow"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:padding="0sp"
        app:layout_constraintTop_toBottomOf="@+id/noticeButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginRight="110dp"
        />
    <TextView
        android:text = "Searching"
        android:textColor="@color/yellow"
        android:textSize="20dp"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:padding="0sp"
        app:layout_constraintTop_toBottomOf="@+id/mapButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="110dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>